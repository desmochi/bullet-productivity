{
    "manifest_version": 2,
    "name" : "Pomodoro Productivity",
    "version": "0.1",
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [ "/libraries/p5.min.js", "/libraries/p5.collide2d.js", "/bullethell/bullethell.js", "/sketch/sketch.js" ]
    }
  ],
  "browser_action": { 
    "default_popup": "/popup/popup.html"
  }
}